<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightPink"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:weightSum="5"
    style="@style/background"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btn_sayilar"
        style="@style/MainStyle"
        android:layout_weight="1"
        android:background="@color/Red"
        android:scaleType="fitCenter"
        android:src="@drawable/numbers" />



    <ImageButton
        android:id="@+id/btn_letters"
        style="@style/MainStyle"
        android:layout_weight="1"
        android:background="@color/Orange"
        android:scaleType="fitCenter"
        android:src="@drawable/letters"
        />


    <ImageButton
        android:id="@+id/btn_quizanimals"
        style="@style/MainStyle"
        android:layout_weight="1"
        android:background="@color/Purple"
        android:scaleType="fitCenter"
        android:src="@drawable/quizanimals" />



    <ImageButton
        android:id="@+id/quiznumbers"
        style="@style/MainStyle"
        android:layout_weight="1"
        android:background="@color/Lime"
        android:scaleType="fitCenter"
        android:src="@drawable/quiznumbers"/>


    <ImageButton
        android:id="@+id/btn_aboutus"
        style="@style/MainStyle"
        android:layout_weight="1"
        android:background="@color/Blue"
        android:scaleType="fitCenter"
        android:src="@drawable/aboutus"/>

</LinearLayout>
